@model Domain.Models.Hotel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<img class="slika" src="@Model.ImageUrl" alt="Image" />
<h1>@Model.Name</h1>
<h5>@Model.Location</h5>
<h3>@Model.Price</h3>
<div class="details-box">
    <h4>@Model.Description</h4>
    @Html.Raw(Model.Map)
    <a asp-action="Index" asp-controller="Bookings">
        <button>Book now</button>
    </a>
</div>
<style>
    .details-box {
        border: 4px solid #ddd;
        padding: 20px;
        margin-top: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .details-box iframe {
            width: 100%;
            height: 300px;
            border: 0;
            border-radius: 8px;
        }
</style>
