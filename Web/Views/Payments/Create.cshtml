@model Domain.Models.Payment

@{
    ViewData["Title"] = "Make a Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-purple">Enter details for payment</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 rounded" style="box-shadow: 0 0 15px rgba(128, 0, 128, 0.5); background: #f9f9ff;">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CardNumber" class="control-label"></label>
                        <input asp-for="CardNumber" class="form-control" placeholder="**** **** **** ****" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CardholderName" class="control-label"></label>
                        <input asp-for="CardholderName" class="form-control" placeholder="Full Name" />
                        <span asp-validation-for="CardholderName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ExpirationDate" class="control-label"></label>
                        <input asp-for="ExpirationDate" class="form-control" placeholder="MM/YY" />
                        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CVV" class="control-label"></label>
                        <input asp-for="CVV" class="form-control" placeholder="***" />
                        <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumberPrefix" class="control-label"></label>
                        <input asp-for="PhoneNumberPrefix" class="form-control" placeholder="+1" />
                        <span asp-validation-for="PhoneNumberPrefix" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="1234567890" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                     <div class="text-center mt-4">
                        <button type="submit" class="btn btn-purple">Submit Payment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
