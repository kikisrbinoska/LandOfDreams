@model IEnumerable<Domain.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-purple">Your Reservations</h1>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center" style="box-shadow: 0 0 15px rgba(128, 0, 128, 0.5);">
            <thead class="bg-purple text-white">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BookingDate)</th>
                    <th>@Html.DisplayNameFor(model => model.TravelEndDate)</th>
                    <th>@Html.DisplayNameFor(model => model.NumberOfPeople)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalCost)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumberPrefix)</th>
                    <th width="50px">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>Pay now!</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.TravelEndDate)</td>
                        <td><span class="badge bg-purple text-white">@item.NumberOfPeople</span></td>
                        <td><span class="badge bg-success text-white">$@item.TotalCost</span></td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumberPrefix)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>
                            <a class="btn btn-outline-purple btn-sm" asp-action="Create" asp-controller="Payments" asp-route-reservationId="@item.Id">
                                Pay
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #800080 !important;
    }

    .text-purple {
        color: #800080 !important;
    }

    .btn-outline-purple {
        border: 1px solid #800080;
        color: #800080;
    }

        .btn-outline-purple:hover {
            background-color: #800080;
            color: white;
        }
</style>
